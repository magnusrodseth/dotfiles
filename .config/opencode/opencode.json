{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--browser=msedge"
      ],
      "enabled": true,
      "type": "local"
    }
  },
  "plugin": [
    "oh-my-opencode",
    "opencode-antigravity-auth@1.4.5"
  ],
  "provider": {
    "google": {
      "models": {
        "google/gemini-3-pro-preview": {
          "attachment": true,
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "name": "Gemini 3 Flash (Antigravity)"
        }
      },
      "name": "Google"
    },
    "ollama": {
      "models": {
        "qwen3:8b": {
          "_launch": true,
          "name": "qwen3:8b"
        }
      },
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      }
    }
  }
}