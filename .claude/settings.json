{
  "env": {
    "DISABLE_ZOXIDE": "1",
    "SHELL": "/bin/bash"
  },
  "permissions": {
    "allow": [
      "Bash(git -C:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git push)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Bottle.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": false,
    "example-skills@anthropic-agent-skills": true,
    "n8n-mcp-skills@n8n-mcp-skills": true,
    "document-skills@anthropic-agent-skills": true,
    "agent-orchestration@claude-code-workflows": true,
    "ralph-loop@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "context-management@claude-code-workflows": true
  },
  "alwaysThinkingEnabled": true
}
