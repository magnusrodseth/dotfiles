{
  "env": {
    "DISABLE_ZOXIDE": "1"
  },
  "permissions": {
    "allow": [
      "Bash(git -C:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git push)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Bottle.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "n8n-mcp-skills@n8n-mcp-skills": false,
    "agent-orchestration@claude-code-workflows": true,
    "context-management@claude-code-workflows": true,
    "feature-dev@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true
}
